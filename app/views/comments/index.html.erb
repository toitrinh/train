
<table>
	<tr>
		<th>Title</th>
		<th>Text</th>
		<th></th>
		<th></th>
	</tr>

	<% @comments.each do |comment| %>
		<tr>
			<td><%= comment.commenter %></td>
			<td><%= comment.body %></td>
			<td><%= link_to 'Show', comment %></td>
		</tr>
	<% end %>
	<tr>
		<td><%= link_to 'New Post', new_post_path %></td>
	</tr>

	
</table>

<%= will_paginate @comments %>

